{
    "include": [
        "src/**/*.ts", 
        "src/**/*.tsx",
        "src/custom.d.ts" 
    ],
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react"
    }
}
